<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/ten_dp"
    android:layout_marginRight="@dimen/ten_dp"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview_goodshare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/top_top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text="商品细节展示" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/userblackline" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/video_layout"
                android:layout_width="@dimen/six_hundred_and_sixty_px"
                android:layout_height="@dimen/three_hundred_and_thirty_px"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty_px">

                <com.universalvideoview.UniversalVideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:uvv_autoRotation="true"
                    app:uvv_fitXY="true" />

                <com.universalvideoview.UniversalMediaController
                    android:id="@+id/media_controller"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:uvv_scalable="true" />

                <RelativeLayout
                    android:id="@+id/linearlayout_goodeshare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray">


                    <ImageView
                        android:id="@+id/iv_goodshare_vv_bac"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <ProgressBar
                        android:id="@+id/progressbar_goodshare_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_goodshare_vv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/goodshare_play"
                    android:visibility="visible" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/middle_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressbar_goodshare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_goodshare_img1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:transitionName="sharedView" />

                <ImageView
                    android:id="@+id/iv_goodshare_img2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_px"
                    android:transitionName="sharedView" />

                <ImageView
                    android:id="@+id/iv_goodshare_img3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_px"
                    android:transitionName="sharedView" />

                <ImageView
                    android:id="@+id/iv_goodshare_img4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_px"
                    android:transitionName="sharedView" />

                <ImageView
                    android:id="@+id/iv_goodshare_img5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_px"
                    android:transitionName="sharedView" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/forty_px">

        <ImageView
            android:id="@+id/iv_goodshare_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forty_px"
            android:layout_marginRight="@dimen/forty_px"
            android:src="@mipmap/goback" />

        <TextView
            android:id="@+id/tv_goodshare_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:background="@mipmap/buybutton_blue"
            android:gravity="center"
            android:text="    购买"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>