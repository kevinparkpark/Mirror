<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="購買詳情"
            android:textColor="#333"
            android:textSize="34px" />

        <ImageView
            android:id="@+id/order_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16px"
            android:layout_marginTop="30px"
            android:background="@mipmap/close" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_close"
            android:layout_marginTop="20px"
            android:background="@mipmap/createaccount_rail" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px"
        android:background="@mipmap/fill_in_the_address_box">

        <TextView
            android:id="@+id/order_information"
            android:layout_width="wrap_content"
            android:layout_height="192px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text="请添加收件人信息"
            android:textColor="#333"
            android:textSize="26px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/order_information"
            android:background="#ddd" />

        <TextView
            android:id="@+id/add_address"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_below="@id/order_information"
            android:gravity="center"
            android:text="添加地址"
            android:textColor="#333"
            android:textSize="26px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px"
        android:background="@mipmap/fill_in_the_address_box">

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="228px"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px">

            <ImageView
                android:id="@+id/article_img"
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:layout_gravity="center" />
        </com.zhy.autolayout.AutoFrameLayout>

        <TextView
            android:id="@+id/order_glasses_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="228px"
            android:layout_marginTop="40px"
            android:text="我是眼镜名"
            android:textColor="#333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_distribution_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_glasses_name"
            android:layout_marginLeft="228px"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:text="您所购买的商品为官网正品现货,我们将于三个工作日内为您免费发货,您所购买的商品均使用顺丰速运进行配送"
            android:textColor="#333"
            android:textSize="26px" />

        <TextView
            android:id="@+id/article_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_distribution_information"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="228px"
            android:layout_marginTop="30px"
            android:text="3850"
            android:textColor="#ff5aab"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/determine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:background="@mipmap/captcha_button"
        android:gravity="center"
        android:text="确认下单"
        android:textColor="#fff"
        android:textSize="30px" />

</com.zhy.autolayout.AutoLinearLayout>